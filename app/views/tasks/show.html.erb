<h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <% completed = @task.completed ? "This task is completed !" : "This task is not completed yet" %>
  <p><%= completed %></p>

<p> <%= link_to "edit task", task_edit_path %></p>
<p><%= link_to "home", tasks_path() %></p>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
